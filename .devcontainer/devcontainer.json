{
    "name": "PQC Benchmark Environment",
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu-22.04",
    
    "features": {
        "ghcr.io/devcontainers/features/python:1": {
            "version": "3.10"
        },
        "ghcr.io/devcontainers/features/git:1": {}
    },
    
    "postCreateCommand": "bash .devcontainer/setup.sh",
    
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-toolsai.jupyter",
                "GitHub.codespaces",
                "ms-vscode.cpptools"
            ]
        }
    },
    
    "remoteUser": "vscode",
    "hostRequirements": {
        "cpus": 2,
        "memory": "8gb",
        "storage": "15gb"
    }
}